# Flask Configuration
SECRET_KEY=your-secret-key-here
FLASK_ENV=development
JWT_SECRET_KEY=your-jwt-secret-key

# Database Configuration
# For SQLite (development):
DATABASE_URL=sqlite:///email_manager.db
# For PostgreSQL (production):
# DATABASE_URL=postgresql://user:password@localhost:5432/email_manager

# Microsoft Graph API Configuration
# Get these from Azure App Registration: https://portal.azure.com/#blade/Microsoft_AAD_RegisteredApps
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret
MICROSOFT_TENANT_ID=common
MICROSOFT_REDIRECT_URI=http://localhost:5000/auth/microsoft/callback

# OpenAI Configuration for Email Classification
# Get API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=800
OPENAI_TEMPERATURE=0.3

# Redis Configuration (for Celery background tasks)
REDIS_URL=redis://localhost:6379/0

# Email Processing Settings
MAX_EMAILS_PER_SYNC=100
SYNC_INTERVAL_MINUTES=15
AI_CLASSIFICATION_BATCH_SIZE=10